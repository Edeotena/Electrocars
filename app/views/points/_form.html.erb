<%= form_with model: @point do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :latitude %><br>
    <%= form.text_area :latitude %>
  </div>

  <div>
    <%= form.label :longitude %><br>
    <%= form.text_area :longitude %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>